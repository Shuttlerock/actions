{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": "src",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "skipLibCheck": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "DOM.Iterable",
      "es2015",
      "es2015.iterable",
      "es2016",
      "es2017",
      "es2018.promise",
      "esnext.asynciterable",
      "es2019"
    ],
    "paths": {
      "*": ["node_modules/*"],
      "src/*": ["./*"],
      "@t/*": ["types/*"]
    }
  },
  "include": ["src/**/*"],
}
